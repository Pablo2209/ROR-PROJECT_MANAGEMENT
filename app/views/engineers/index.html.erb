

<!-- Page Wrapper -->
<div id="wrapper">
    <%= render 'shared/side' %>
    <%= render 'shared/nav' %>

    <p id="notice"><%= notice %></p>

    <h1>Engineers</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Rut</th>
          <th>Birth</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @engineers.each do |engineer| %>
          <tr>
            <td><%= engineer.name %></td>
            <td><%= engineer.rut %></td>
            <td><%= engineer.birth %></td>
            <td><%= link_to 'Show', engineer %></td>
            <td><%= link_to 'Edit', edit_engineer_path(engineer) %></td>
            <td><%= link_to 'Destroy', engineer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Engineer', new_engineer_path %>

    <%= render 'shared/foo' %>
</div>

